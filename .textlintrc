{
  "rules": {
    "preset-ja-technical-writing": {
      "no-exclamation-question-mark": false,
      "no-doubled-joshi": {
        "strict": false,
        "allow": ["か", "に", "は", "が", "と", "て", "で", "な", "の", "を", "や", "よ", "る"]
      }
    },
    "preset-japanese": {
      "sentence-length": {
        "max": 120
      },
      "max-ten": {
        "max": 4
      }
    },
    "prh": {
      "rulePaths": []
    },
    "spellcheck-tech-word": true,
    "no-mix-dearu-desumasu": {
      "preferInHeader": "",
      "preferInBody": "である",
      "strict": false
    },
    "max-ten": {
      "max": 4
    },
    "ja-no-mixed-period": {
      "allowPeriodMarks": [":", "…"],
      "allowEmojiAtEnd": false,
      "forceAppendPeriod": false
    },
    "ja-no-redundant-expression": true
  }
}